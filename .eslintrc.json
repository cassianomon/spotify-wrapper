{
  "extends": "airbnb-base",
  "plugins": ["import", "mocha"],
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "describe": true,
    "it": true
  },
  "rules": {
    "mocha/no-mocha-arrows": "off"
  },
  "validate": ["javascript", "javascriptreact", "html", "typescriptreact"]
}
